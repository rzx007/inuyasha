{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "eslint": {
      "dependsOn": [
        "^eslint"
      ]
    },
    "prettier": {
      "dependsOn": [
        "^prettier"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}