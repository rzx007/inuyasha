{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2023",
    "jsx": "preserve",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}